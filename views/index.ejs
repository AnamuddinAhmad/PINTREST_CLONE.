<%- include ./Partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-300 flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-white rounded-[30px] px-8 py-10 sm:px-12 md:px-16">
        <h1 class="text-2xl md:text-3xl leading-none font-semibold text-zinc-700 text-center tracking-tighter capitalize">
            Welcome to Pinterest
        </h1>
        <form action="/login" method="post" autocomplete="off">
            <input
                class="border-2 block rounded-md outline-none w-full px-3 py-2 mt-4"
                type="text"
                name="username"
                placeholder="Username"
            >
            <input
                class="border-2 block rounded-md outline-none w-full px-3 py-2 mt-4"
                type="password"
                name="password"
                placeholder="Password"
            >
            <a class="mt-2 font-semibold text-zinc-600 inline-block" href="#">Forgot password?</a>
            <input
                class="border-2 block w-full px-3 py-2 mt-6 bg-red-600 text-white rounded-full cursor-pointer"
                type="submit"
                value="Login"
            >
            <p class="text-xs font-semibold text-zinc-700 mt-7 text-center">
                By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy.
            </p>
        </form>
        <a href="/register" class="mt-7 block text-xs font-semibold text-zinc-700 text-center">
            Donâ€™t have an account? Sign up
        </a>
    </div>
</div>


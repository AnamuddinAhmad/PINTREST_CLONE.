<style>
    input[type='number']::-webkit-outer-spin-button,
    input[type='number']::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
  
    input[type='number'] {
        -moz-appearance: textfield;
    }
  </style>
  
<%- include ./Partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-300 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md bg-white rounded-2xl px-6 py-8 sm:px-10 sm:py-12 lg:px-16 lg:py-14">
        <h1 class="text-2xl sm:text-3xl leading-tight font-semibold text-zinc-700 text-center tracking-tighter capitalize">
            Create new Account
        </h1>
        <form action="/register" method="post" autocomplete="off">
            <input class="border-2 block rounded-md outline-none w-full px-3 mt-4 py-2" type="text" name="username"
                placeholder="Username">
            <input class="border-2 block rounded-md outline-none w-full px-3 mt-4 py-2" type="text" name="name"
                placeholder="Name">
            <input class="border-2 block rounded-md outline-none w-full px-3 mt-4 py-2" type="email" name="email"
                placeholder="Email">
            <input class="border-2 block rounded-md outline-none w-full px-3 mt-4 py-2" type="number" name="contact"
                placeholder="Contact">
            <input class="border-2 block rounded-md outline-none w-full px-3 mt-4 py-2" type="password" name="password"
                placeholder="Password">
            <input class="border-2 block w-full px-3 mt-6 py-2 bg-red-600 text-white rounded-full cursor-pointer"
                type="submit" value="Create new Account">
            <p class="text-xs font-semibold text-zinc-700 mt-6 mx-auto text-center">By continuing, you agree to Pinterest's
                Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.
            </p>
        </form>
        <a href="/" class="mt-7 block text-xs font-semibold text-zinc-700 text-center">Login to an existing account</a>
    </div>
</div>

<%- include ./partials/footer.ejs %>
